# EditorConfig is awesome: https://EditorConfig.org
# This file ensures consistent coding styles across different editors and IDEs
# Most editors support EditorConfig natively or via plugins

# Top-most EditorConfig file - stops searching for .editorconfig files in parent directories
root = true

# =============================================================================
# Default settings for all files
# =============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# =============================================================================
# Source Code Files
# =============================================================================

# TypeScript and JavaScript source files
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2
max_line_length = 80

# TypeScript definition files
[*.d.ts]
indent_size = 2

# =============================================================================
# Configuration Files
# =============================================================================

# JSON files (package.json, tsconfig.json, etc.)
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true

# TOML files (Cargo.toml, pyproject.toml, etc.)
[*.toml]
indent_size = 2

# INI files
[*.{ini,cfg}]
indent_size = 2

# Configuration files (various formats)
[{*.config.{js,ts,mjs,cjs},.prettierrc.json,.eslintrc.json,.stylelintrc.json}]
indent_size = 2

# =============================================================================
# Package Manager Files
# =============================================================================

# Lock files (keep as-is, but ensure consistent line endings)
[{package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2
# Lock files are auto-generated, but we still want consistent line endings

# =============================================================================
# Markup and Style Files
# =============================================================================

# HTML files
[*.{html,htm}]
indent_size = 2
max_line_length = 120

# XML files
[*.xml]
indent_size = 2

# CSS, SCSS, SASS, LESS
[*.{css,scss,sass,less}]
indent_size = 2
max_line_length = 120

# =============================================================================
# Documentation Files
# =============================================================================

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = off
# Markdown often uses trailing spaces for line breaks

# =============================================================================
# Data and Serialization Files
# =============================================================================

# CSV files
[*.csv]
trim_trailing_whitespace = false

# =============================================================================
# Scripts and Build Files
# =============================================================================

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
shell_variant = bash

# PowerShell scripts
[*.{ps1,psm1,psd1}]
indent_size = 2

# Python scripts
[*.py]
indent_size = 4
max_line_length = 88

# Ruby scripts
[*.rb]
indent_size = 2
max_line_length = 120

# =============================================================================
# Special Files
# =============================================================================

# Makefile (must use tabs)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Dockerfile
[{Dockerfile,*.dockerfile}]
indent_size = 2

# Git configuration
[.git{config,attributes,ignore}]
indent_size = 2

# EditorConfig itself
[.editorconfig]
indent_size = 2

# =============================================================================
# Database and Schema Files
# =============================================================================

# SQL files
[*.sql]
indent_size = 2
max_line_length = 120

# Prisma schema
[*.prisma]
indent_size = 2

# =============================================================================
# Generated and Binary Files (explicitly set to avoid issues)
# =============================================================================

# Binary files - EditorConfig doesn't process these, but we set defaults
[*.{png,jpg,jpeg,gif,ico,pdf,woff,woff2,ttf,eot}]
charset = binary

# SVG files (text-based, but can be complex)
[*.svg]
indent_size = 2
trim_trailing_whitespace = false

# =============================================================================
# Environment and Secret Files
# =============================================================================

# Environment files
[*.env*]
indent_size = 2
trim_trailing_whitespace = true

# =============================================================================
# Log Files
# =============================================================================

# Log files (usually shouldn't be formatted)
[*.log]
trim_trailing_whitespace = false
